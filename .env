```
# Vite Environment Variables
VITE_APP_NAME=simple-app-with
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Simple Todo App with Glassmorphism Wild Colors

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Theme Configuration
VITE_DEFAULT_THEME=wild
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_GLASSMORPHISM=true

# Storage Configuration
VITE_STORAGE_KEY=glassmorphic_todos
VITE_AUTO_SAVE=true

# UI Configuration
VITE_MAX_TODOS=100
VITE_ENABLE_DRAG_DROP=true
VITE_ENABLE_CATEGORIES=true
VITE_ENABLE_PRIORITIES=true

# Performance Configuration
VITE_ANIMATION_DURATION=300
VITE_DEBOUNCE_DELAY=300
VITE_AUTO_FOCUS=true

# Feature Flags
VITE_ENABLE_SEARCH=true
VITE_ENABLE_FILTERS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_IMPORT=true
VITE_ENABLE_KEYBOARD_SHORTCUTS=true

# Color Theme Presets
VITE_THEME_WILD_PRIMARY=#ff006e
VITE_THEME_WILD_SECONDARY=#8338ec
VITE_THEME_WILD_ACCENT=#3a86ff
VITE_THEME_WILD_GRADIENT=linear-gradient(135deg, #667eea 0%, #764ba2 100%)

# Glassmorphism Settings
VITE_GLASS_OPACITY=0.25
VITE_GLASS_BLUR=16
VITE_GLASS_BORDER_OPACITY=0.18
```